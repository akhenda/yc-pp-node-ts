{
  "name": "node-typescript-jest-boilerplate",
  "version": "0.0.1",
  "description": "NodeJS typescript + jest boilerplate",
  "author": "Brian Schlenker <bschlenk@umich.edu>",
  "license": "MIT",
  "engines": {
    "node": "18",
    "pnpm": "7",
    "npm": "Please Use PNPM instead of NPM",
    "yarn": "Please Use PNPM instead of Yarn"
  },
  "volta": {
    "node": "18.15.0",
    "pnpm": "7.29.1"
  },
  "packageManager": "pnpm@7.29.1",
  "keywords": [
    "boilerplate",
    "typescript",
    "jest"
  ],
  "repository": "bschlenk/node-typescript-jest-boilerplate",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!**/__tests__/**/*"
  ],
  "scripts": {
    "gc": "git add . && git-cz",
    "prepare": "chmod +x ./node_modules/husky/lib/bin.js && husky install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --watch --coverage=false --changedSince=origin/main --verbose --runInBand --detectOpenHandles",
    "test:debug": "jest -o --watch --coverage=false",
    "test:final": "jest",
    "test:update-snapshots": "jest -u --coverage=false",
    "test:ci": "jest --ci --coverage",
    "prettify:js": "prettier --write '**/*.js{,x}'",
    "prettify:json": "prettier --write '**/*.json'",
    "prettify:md": "prettier --write '**/*.md'",
    "prettify:ts": "prettier --write '**/*.ts{,x}'",
    "prettify:yaml": "prettier --write '**/*.y{,a}ml'",
    "prettify": "npm-run-all prettify:*",
    "validate": "npm-run-all lint test:final",
    "validate:ci": "npm-run-all lint test:ci",
    "dev": "nodemon",
    "build": "tsc",
    "prepublishOnly": "pnpm run test && pnpm run build"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@types/eslint": "8.21.3",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.5",
    "@typescript-eslint/eslint-plugin": "5.56.0",
    "@typescript-eslint/parser": "5.56.0",
    "commitizen": "4.3.0",
    "eslint": "8.36.0",
    "eslint-config-heimdall": "1.6.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-unused-imports": "2.0.0",
    "git-cz": "4.9.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-extended": "3.2.4",
    "lint-staged": "13.2.0",
    "nodemon": "2.0.21",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.6",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  }
}
